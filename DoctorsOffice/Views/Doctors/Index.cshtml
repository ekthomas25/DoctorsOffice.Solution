@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1>Patient Tracker</h1>
<h2>Doctors:</h2>

@if(Model.Count == 0)
{
  <p>No doctors have been added.</p>
}

<ul>
  @foreach(Doctor doctor in Model)
  {
    <li>@Html.ActionLink($"Dr. {doctor.FirstName} {doctor.LastName}", "Details", new { id = doctor.DoctorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a Doctor", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>